<%= render partial: "layouts/scripts/restaurant_isotope" %>
<div class="row">
	<div class="col-xs-12">
		<center><h3><%= @city.name %></h3></center>
		<hr/>
	</div>	
</div>
<div class="row">
	<div class="col-xs-12 col-md-6">
		<svg height="250px" width="100%">
			<line x1="20" y1="20" x2="420" y2="20" style="stroke:rgba(131, 131, 131, 0.64);" />
			<line x1="20" y1="220" x2="420" y2="220" style="stroke:rgba(131, 131, 131, 0.64);" />
			<line x1="20" y1="20" x2="20" y2="220" style="stroke:rgba(131, 131, 131, 0.64);" />
			<line x1="420" y1="20" x2="420" y2="220" style="stroke:rgba(131, 131, 131, 0.64);" />
		  <circle cx="20" cy="20" r="10" fill="rgba(106, 185, 112, 0.68)"  />
		  <circle cx="420" cy="20" r="10" fill="rgba(106, 185, 112, 0.68)" />
		  <circle cx="20" cy="220" r="10" fill="rgba(106, 185, 112, 0.68)" />
		  <circle cx="420" cy="220" r="10" fill="rgba(106, 185, 112, 0.68)" />
		  <circle cx="220" cy="120" r="10" fill="rgba(185, 106, 106, 0.68)" />
	    <text x="5" y="10" fill="black">[<%= @location_index.to_string(:a) %>]</text>
	    <text x="225" y="10" fill="black">[<%= @location_index.to_string(:b) %>]</text>
	    <text x="5" y="240" fill="black">[<%= @location_index.to_string(:c) %>]</text>
	    <text x="225" y="240" fill="black">[<%= @location_index.to_string(:d) %>]</text>
	    <text x="100" y="100" fill="black"><%= @location_index.center %></text>
		</svg>
	</div>
	<div class="col-xs-12 col-md-6">
		<table class="table table-striped table-hover">
			<tr>
				<th>Coordinates</th>
				<td><%= @location_index.center.to_s %></td>
			</tr>
			<tr>
				<th>Number of Restaurants in this zone</th>
				<td><%= @location_index.restaurants.count %></td>
			</tr>			
		</table>
		<hr/>
	</div>
</div>
<hr/>
<div class="row">
	<center>
		<h3>Restaurants in the Area</h3>
	</center>
	<div id="restaurants">
		<% @location_index.restaurants.each do |restaurant| %>
			<div class="well restaurant">
				<center><h4><%= restaurant.name %></h4></center>
				<hr/>
				<table class="table table-striped">
					<tr>
						<th>Id</th>
						<td><%= restaurant.id %></td>
					</tr>
					<tr>
						<th>Locality</th>
						<td><%= restaurant.locality %></td>
					</tr>
					<tr>
						<th>Cusines</th>
						<td><%= restaurant.cuisine_list %></td>
					</tr>
					<tr>
						<th>Rating</th>
						<td><%= restaurant.rating_editor_overall %></td>
					</tr>
					<tr>
						<th>Cost for two</th>
						<td><%= restaurant.cost_for_two %></td>
					</tr>
				</table>
				<p><strong>Address: </strong><%= restaurant.address %></p>
			</div>
		<% end %>
	</div>
</div>